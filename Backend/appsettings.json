{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "CrewQuiz": ""
  },
  "AppSettings": {
    "Environment": "Production",
    "Cors": {
      "AllowedOrigins": "https://crewquiz.netlify.app"
    },
    "Jwt": {
      "Secret": "",
      "ExpirationInMinutes": 1440,
      "Issuer": "https://your-api-domain.com",
      "Audience": "https://crewquiz.netlify.app"
    },
    "SessionCleanup": {
      "IntervalHours": 6,
      "SessionTimeoutHours": 24
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.CorrelationId"
    ],
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error",
        "Microsoft.EntityFrameworkCore": "Error",
        "Microsoft.AspNetCore": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] [{Level:u3}] [{CorrelationId}] [{SourceContext:l}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/crewquiz-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] [{CorrelationId}] [{SourceContext}] [{ThreadId}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithCorrelationId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "Application": "CrewQuiz",
      "Environment": "Production"
    }
  }
}